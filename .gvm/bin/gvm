#!/usr/bin/env bash

source $HOME/.gvm/gvm-lib

if [ "$1" = "list" ]; then
	list_ghc_versions
elif [ "$1" = "use" ]; then
	set_ghc_version $2
else
	cat << EOF
gvm      usage: $ gvm [use | list]
           use: $ gvm use <ghc-version>
          list: $ gvm list
	    add-ghc: $ gvm add-ghc <ghc-path-to-manage>
	    add-dir: $ gvm add-dir <dir-with-ghcs-to-manage>
	 list-paths: $ gvm list-paths

EOF

fi


# Common Environmental Variables File
# Designed to be shared among different shells and computers
#
# Author: David Terei

# the default umask is set in /etc/profile
umask 007

# get 256 color mode
export TERM="xterm-256color"

export EDITOR="vim"
export SVN_EDITOR="vim"
export VISUAL="vim"
export VIEWER="less"
export HOSTNAME="`hostname`"

# colour grep results
export GREP_OPTIONS='--color=auto'
export GREP_COLOR='1;32'

# Set tmpdir if not set
if [ -z "$TMPDIR" ] ; then
	if [ -n "$TEMPDIR" ] ; then
		export TMPDIR=$TEMPDIR	
	elif [ -n "$TMP" ] ; then
		export TMPDIR=$TMP
	else
		export TMPDIR=/tmp
	fi
fi

# set maildrop location
MAILFOLDER=~/.Mail
if [ -d "${MAILFOLDER}" ]; then
	export MAILDROP="${MAILFOLDER}/incoming-mail"
	export MAIL="${MAILFOLDER}/incoming-mail"
fi

# stulocal - Uni
STULOCAL=/home/stulocal/bin/setup-env.sh
if [ -d "${STULOCAL}" ] ; then
	. ${STULOCAL}
fi

# tex
if [ -d "$HOME/tex/" ] ; then
	export TEXINPUTS=.:$HOME/tex/:$TEXINPUTS
fi

# spark - sun - thesis
if [ "$HOSTNAME" = "sparky" ] ; then
	export LD_LIBRARY_PATH=/usr/sfw/lib:/opt/csw/lib:/usr/ccs/lib:$LD_LIBRARY_PATH
	export PATH=/opt/SUNWspro/extra/bin:/opt/gcc-vanilla/4.1.2/bin:/opt/csw/bin:/usr/bin:/usr/ccs/bin:$PATH
fi

# my laptop
if [ "$HOSTNAME" = "david-laptop" ] ; then
	export WIN=/media/windows/Users/david/
	export win=/media/windows/Users/david/
	export UBN=/media/ubuntu/home/david
	export ubn=/media/ubuntu/home/david
fi

# bens OSX machine
if [ "$HOSTNAME" = "desire.cse.unsw.edu.au" ] ; then
	export HTTP_PROXY="http://www-proxy.cse.unsw.edu.au:3128"
	export http_proxy="http://www-proxy.cse.unsw.edu.au:3128"
fi

# default GHC Home
export GHCHOME=$HOME/Ghc

# IBM Laptop
if [ "$HOST" = "IBM-R829FB9" ] ; then
	export DISPLAY=127.0.0.1:0.0
	export GHCHOME=C:/dev/cygwin/home/t-dater/Ghc
fi

# GHC Dev
GHCDEV=$GHCHOME/ghc-current/inplace/bin
if [ -d $GHCDEV ] ; then
	export GHCDEV=$GHCDEV
	export GHCDEVBIN=$GHCDEV/ghc-stage2
	export GHCDEVPKG=$GHCDEV/ghc-pkg
fi

# Ruby RVM manager
if [ -s ~/.rvm/scripts/rvm ] ; then
	source ~/.rvm/scripts/rvm
fi

# set PATH so it includes user's private bin if it exists
if [ -d ~/Development/bin ] ; then
	export PATH=~/Development/bin:${PATH}
fi

if [ -d ~/bin ] ; then
	export PATH=~/bin:${PATH}
fi


# Common Environmental Variables File
# Designed to be shared among different shells and computers
#
# Author: David Terei

# if [ -z "$TMUX" ] ; then
#	export TERM="xterm-256color"
# fi

export EDITOR="vim"
export SVN_EDITOR="vim"
export VISUAL="vim"
export VIEWER="less"
export HOSTNAME="`hostname`"

# colour grep results
export GREP_OPTIONS='--color=auto'
export GREP_COLOR='1;32'

# Set tmpdir if not set
if [ -z "${TMPDIR}" ] ; then
	if [ -n "${TEMPDIR}" ] ; then
		export TMPDIR="${TEMPDIR}"
	elif [ -n "${TMP}" ] ; then
		export TMPDIR="${TMP}"
	else
		export TMPDIR="/tmp"
	fi
fi

# set maildrop location
MAILFOLDER=~/.Mail
if [ -d "${MAILFOLDER}" ]; then
	export MAILDROP="${MAILFOLDER}/incoming-mail"
	export MAIL="${MAILFOLDER}/incoming-mail"
fi

# Cabal bin
if [ -d ~/.cabal/bin/ ] ; then
	export PATH="${HOME}/.cabal/bin:${PATH}"
fi

if [ "$OSTYPE" = "darwin12.0" ] ; then
   # Brew
	if [ -d /usr/local/bin ] ; then
		export PATH="/usr/local/bin:/usr/local/sbin:${PATH}"
	fi

   # Postgres.app
	if [ -d /Applications/Postgres.app/Contents/MacOS/bin/ ] ; then
		export PATH="/Applications/Postgres.app/Contents/MacOS/bin:${PATH}"
	fi
fi

# Load rbenv
if which rbenv > /dev/null; then
	eval "$(rbenv init -)"
fi

# GHC GVM manager
if [ -d ~/.gvm/bin/ ] ; then
	export PATH="${HOME}/.gvm/bin:${PATH}"
fi

# AWS Tools
if [ -d ~/Software/ec2-api-tools/ ] ; then
	export EC2_HOME="${HOME}/Software/ec2-api-tools"
	export PATH="${EC2_HOME}/bin:${PATH}"
	export JAVA_HOME="/usr"
fi
if [ -f ~/.aws_credentials ] ; then
	source ~/.aws_credentials
fi

# Golang
if [ -d ~/Software/go-1.1.1/ ] ; then
	export GOROOT=$HOME/Software/go-1.1.1
	export PATH="${GOROOT}/bin:${PATH}"
fi

# Scala
if [ -d ~/Software/scala-2.9.3/ ] ; then
	export SCALA_HOME="${HOME}/Software/scala-2.9.3"
	export PATH="${SCALA_HOME}/bin:${PATH}"
fi

# Private scripts
if [ -d ~/.scripts ] ; then
	export PATH="${HOME}/.scripts:${PATH}"
fi

# Private executables
if [ -d ~/bin ] ; then
	export PATH="${HOME}/bin:${PATH}"
fi


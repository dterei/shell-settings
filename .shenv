# Common Environmental Variables File
# Designed to be shared among different shells and computers
#
# Author: David Terei

# if [ -z "$TMUX" ] ; then
#	export TERM="xterm-256color"
# fi

export EDITOR="vim"
export SVN_EDITOR="vim"
export VISUAL="vim"
export VIEWER="less"
export PAGER="less"
export HOSTNAME="`hostname`"

# Set tmpdir if not set
if [ -z "${TMPDIR}" ] ; then
	if [ -n "${TEMPDIR}" ] ; then
		export TMPDIR="${TEMPDIR}"
	elif [ -n "${TMP}" ] ; then
		export TMPDIR="${TMP}"
	else
		export TMPDIR="/tmp"
	fi
fi

# set maildrop location
MAILFOLDER=~/.Mail
if [ -d "${MAILFOLDER}" ]; then
	export MAILDROP="${MAILFOLDER}/incoming-mail"
	export MAIL="${MAILFOLDER}/incoming-mail"
fi

if [ "$OSTYPE" = "darwin14.0" ] ; then
  # XCode Tools
  if [ -d /Library/Developer/CommandLineTools/usr/bin ] ; then
    export PATH="/Library/Developer/CommandLineTools/usr/bin:${PATH}"
  fi

   # Brew
	if [ -d /usr/local/bin ] ; then
		export PATH="/usr/local/bin:/usr/local/sbin:${PATH}"
	fi

   # Postgres.app
	if [ -d /Applications/Postgres.app/Contents/Versions/9.3/bin/ ] ; then
		export PATH="/Applications/Postgres.app/Contents/Versions/9.3/bin:${PATH}"
	fi

   # Java
	export JAVA_HOME="$(/usr/libexec/java_home)"
fi

# Cabal bin
if [ -d ~/.cabal/bin/ ] ; then
	export PATH="${HOME}/.cabal/bin:${PATH}"
fi

# Heroku
if [ -d /usr/local/heroku/bin/ ] ; then
  export PATH="${PATH}:/usr/local/heroku/bin"
fi

# Scala
if [ -d ~/Software/scala-2.9.3/ ] ; then
	export SCALA_HOME="${HOME}/Software/scala-2.9.3"
	export PATH="${SCALA_HOME}/bin:${PATH}"
fi

# Load rbenv
if [ -d ~/.rbenv/bin/ ] ; then
	export PATH="${HOME}/.rbenv/bin:${PATH}"
	# manually do this as otherwise tmux doesn't work since it reloads the path
	# (duplicating entries) but rbenv checks the path and doesn't duplicate...
	# leading the the system ruby at the front.
	export PATH="${HOME}/.rbenv/shims:${PATH}"
fi
if which rbenv > /dev/null; then
	eval "$(rbenv init -)"
fi

# GHC GVM manager
if [ -d ~/.gvm/bin/ ] ; then
	export PATH="${HOME}/.gvm/bin:${PATH}"
fi

# AWS Tools
if [ -d ~/Software/ec2-api-tools/ ] ; then
	export EC2_HOME="${HOME}/Software/ec2-api-tools"
	export PATH="${EC2_HOME}/bin:${PATH}"
fi

if [ -f ~/.aws_credentials ] ; then
	source ~/.aws_credentials
fi

# Golang
if [ -d ~/Software/go-1.3/ ] ; then
	export GOROOT=$HOME/Software/go-1.3
	export PATH="${GOROOT}/bin:${PATH}"
fi

# The next line updates PATH for the Google Cloud SDK.
if [ -d ${HOME}/Software/google-cloud-sdk/ ]; then
  if [ -n $ZSH_VERSION ]; then
    source '/Users/davidt/Software/google-cloud-sdk/path.zsh.inc'
  else
    source '/Users/davidt/Software/google-cloud-sdk/path.bash.inc'
    source '/Users/davidt/Software/google-cloud-sdk/completion.bash.inc'
  fi
fi

# anarchist -- arc
if [ -d ~/Software/anarchist/arcanist/bin ] ; then
  export PATH="${HOME}/Software/anarchist/arcanist/bin:${PATH}"
fi

# Private scripts
if [ -d ~/.scripts ] ; then
	export PATH="${HOME}/.scripts:${PATH}"
fi

# Private executables
if [ -d ~/bin ] ; then
	export PATH="${HOME}/bin:${PATH}"
fi


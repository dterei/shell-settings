# Common Environmental Variables File
# Designed to be shared among different shells and computers
#
# Author: David Terei

# the default umask is set in /etc/profile
umask 007

# get 256 color mode
#export TERM="xterm-256color"

export EDITOR="vim"
export SVN_EDITOR="vim"
export VISUAL="vim"
export VIEWER="less"
export HOSTNAME="`hostname`"

# colour grep results
export GREP_OPTIONS='--color=auto'
export GREP_COLOR='1;32'

# set maildrop location
MAILFOLDER=~/.Mail
if [ -d "${MAILFOLDER}" ]; then
	export MAILDROP="${MAILFOLDER}/incoming-mail"
	export MAIL="${MAILFOLDER}/incoming-mail"
fi

# stulocal - Uni
STULOCAL=/home/stulocal/bin/setup-env.sh
if [ -d "${STULOCAL}" ] ; then
	. ${STULOCAL}
fi

# RoboCup Soccer Simulator
RCSSBASE=~/Projects/cs344/rcss_11
if [ -d "${RCSSBASE}" ] ; then
	export RCSSBASE=${RCSSBASE}
	export PATH=${PATH}:${RCSSBASE}/bin
fi

# AOS - Home
AOSBIN=/opt/crosstool/gcc-3.4.5-glibc-2.3.5/armv5b-softfloat-linux/bin
if [ -d "${AOSBIN}" ] ; then
	export PATH=${PATH}:${AOSBIN}
fi

# AOS - Uni
arm5xdev=gcc-3.4.5-glibc-2.3.5/armv5b-softfloat-linux
if [ -d "/home/disy/crossdev/${ARCH}/${arm5xdev}/bin" ] ; then
	export PATH=${PATH}:/home/disy/crossdev/${ARCH}/${arm5xdev}/bin
	export PATH=${PATH}:/home/disy/bin
fi

# AOS - Home
if [ "$HOSTNAME" = "david-laptop" ] ; then
	export TFTPROOT=/srv/tftp/
fi

# tex
if [ -d "$HOME/tex/" ] ; then
	export TEXINPUTS=.:$HOME/tex/:$TEXINPUTS
fi

# work mac - macports
if [ "$HOSTNAME" = "chiaroscuro" ] ; then
	export PATH=/opt/local/bin:/opt/local/sbin:$PATH
	#export CPATH=/opt/local/include:$CPATH
	#export LIBRARY_PATH=/opt/local/lib:$LIBRARY_PATH
	export MANPATH=/opt/local/share/man:$MANPATH
	export DISPLAY=:0.0
	export JAVA_HOME="/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home/"
fi

# spark - sun - thesis
if [ "$HOSTNAME" = "sparky" ] ; then
	export LD_LIBRARY_PATH=/usr/sfw/lib:/opt/csw/lib:/usr/ccs/lib:$LD_LIBRARY_PATH
	export PATH=/opt/SUNWspro/extra/bin:/opt/gcc-vanilla/4.1.2/bin:/opt/csw/bin:/usr/bin:/usr/ccs/bin:$PATH
fi

# GHC Development
export GHCDEV=/home/david/Ghc/llvm_reg/inplace/bin
export GHCDEVBIN="$GHCDEV/ghc-stage2"
export GHCDEVPKG="$GHCDEV/ghc-pkg"

# set PATH so it includes user's private bin if it exists
if [ -d ~/Development/bin ] ; then
	export PATH=~/Development/bin:${PATH}
fi

if [ -d ~/bin ] ; then
	export PATH=~/bin:${PATH}
fi

